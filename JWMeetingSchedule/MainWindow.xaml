<Window x:Class="JWMeetingSchedule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JWMeetingSchedule"
        mc:Ignorable="d"
        Title="JW Meeting Schedule" Height="675" Width="1280"
        Icon="Images/icon.png">
    <Grid Background="#121212">
        <StackPanel HorizontalAlignment="Left" Background="#2e2e2e" VerticalAlignment="Stretch" Width="48">
            <ToggleButton x:Name="BtnSchedule" IsChecked="True" Height="50" VerticalAlignment="Top" Width="50" Click="BtnSchedule_Click">
                <Image Source="Images/outline_assignment_white_24dp.png" Width="24"/>
            </ToggleButton>
            <ToggleButton x:Name="BtnPersons" Height="50" VerticalAlignment="Top" Width="50" Click="BtnPersons_Click">
                <Image Source="Images/outline_people_white_24dp.png" Width="24"/>
            </ToggleButton>
        </StackPanel>
    </Grid>
</Window>
